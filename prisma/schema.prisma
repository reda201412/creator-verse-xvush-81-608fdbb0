
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id            String   @id @default(uuid())
  title         String
  description   String?
  thumbnailUrl  String?
  videoUrl      String?
  type          String   @default("standard") // standard, teaser, premium, vip
  format        String   @default("16:9")     // 16:9, 9:16, 1:1
  isPremium     Boolean  @default(false)
  tokenPrice    Int      @default(0)
  restrictions  Json?    // Additional restrictions/requirements
  status        String   @default("processing") // processing, ready, error
  errorDetails  String?
  userId        String
  muxUploadId   String   @unique
  muxAssetId    String?
  muxPlaybackId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([type])
}
